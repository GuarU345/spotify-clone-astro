---
import { getLikedSongsPlaylist } from "src/services/playlists";
const playlist = await getLikedSongsPlaylist();
const { image, name, type, id } = playlist;
---

<div class="flex">
  <a
    class="w-72 rounded-sm flex items-center gap-2 bg-white/5 hover:cursor-pointer hover:bg-white/10"
    href={`/playlist/${id}`}
  >
    <picture>
      <img src={image} alt={name} class="w-16 h-16 rounded-sm" />
    </picture>
    <div class="flex flex-col text-white">
      <p class="text-sm font-semibold">{name}</p>
      <span class="text-xs text-gray-300">{type}</span>
    </div>
  </a>
</div>
